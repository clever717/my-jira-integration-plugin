<idea-plugin>
    <id>com.intellij.myjira</id>
    <name>My Jira Integration by hans</name>
    <vendor email="clever717@gmail.com" url="https://github.com/clever717/my-jira-integration-plugin">Hans Lee</vendor>

    <description>
        <![CDATA[
            This plugin is based on <a href="https://gitlab.com/adrielsr/jira-intellij-plugin">jira-integration-plugin</a>
            <ul>
                <li>Fetch issues from server with customizable searchers</li>
                <li>View issue details</li>
                <li>Run actions on issue, like transit an issue, assign it, change his priority,...</li>
                <li>Go to specific issue on list</li>
                <li>New : Create Sub Issue for developer</li>
                <li>New : updatable fixVersion</li>
            </ul>

        ]]>
    </description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.tasks</depends>

    <application-components>
        <component>
            <implementation-class>com.intellij.myjira.components.JiraActionManager</implementation-class>
        </component>
        <component>
            <implementation-class>com.intellij.myjira.components.JiraNotificationManager</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.intellij.myjira.components.JQLSearcherManager</implementation-class>
        </component>
        <component>
            <implementation-class>com.intellij.myjira.components.JQLSearcherObserver</implementation-class>
        </component>
        <component>
            <implementation-class>com.intellij.myjira.server.JiraServerManager</implementation-class>
        </component>
        <component>
            <implementation-class>com.intellij.myjira.components.JiraIssueUpdater</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="JIRA" anchor="bottom" icon="/icons/ico-jira-16.png" factoryClass="com.intellij.myjira.ui.JiraToolWindowFactory"/>

    </extensions>

    <actions>
        <action id="Jira.toolwindow.Refresh"
          class="com.intellij.myjira.actions.JiraIssuesRefreshAction"
                text="Refresh issues"
                description="Updates the project issues"
                icon="AllIcons.Actions.Refresh">
        </action>


    </actions>
</idea-plugin>
